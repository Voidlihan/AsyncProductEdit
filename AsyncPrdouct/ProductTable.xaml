<Window x:Class="AsyncPrdouct.ProductTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncPrdouct"
        mc:Ignorable="d"
        Title="ProductTable" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="252*"/>
            <ColumnDefinition Width="287*"/>
            <ColumnDefinition Width="253*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Button Content="Редактировать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="232" Margin="10,10,0,0" Grid.Row="5" Height="37" FontSize="20" Click="EditProduct"/>
        <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="232" Margin="28,10,0,0" Grid.Row="5" Height="37" Grid.Column="1" FontSize="20" Click="AddProduct"/>
    </Grid>
</Window>
